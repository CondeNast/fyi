{
  "name": "easy-fyi",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "private": true,
  "repository": "https://github.com/CondeNast/easy-fyi.git",
  "homepage": "https://github.com/CondeNast/easy-fyi",
  "bugs": "https://github.com/CondeNast/easy-fyi/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "fyi"
  ],
  "contributors": [
    "John K. Paul <john@johnkpaul.com>",
    "Gautam Arora <gautamsarora@gmail.com>"
  ],
  "scripts": {
    "dev:server": "nodemon --exec \"source authenticate-vault && npm start\"",
    "dev:client": "npm start --prefix=public/my-app",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "eval \"`node src/scripts/startup.env.js`\";probot run ./app.js",
    "lint": "standard --fix",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "test:unit": "jest --roots tests/unit",
    "test:unit:update": "jest --roots tests/unit --updateSnapshot",
    "test:integration": "jest --roots tests/integration",
    "test:unit:watch": "jest  --roots tests/unit --watch --notify --notifyMode=change --coverage",
    "test:unit:coverage": "jest --roots tests/unit --coverage",
    "sequelize": "eval `node src/scripts/startup.env.js`;sequelize",
    "repl": "eval `node src/scripts/startup.env.js`;node --trace-warnings repl"
  },
  "dependencies": {
    "@condenast/cn-vault": "^2.5.0",
    "@condenast/express-dogstatsd": "^1.1.0",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "handlebars": "^4.0.11",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "probot": "^7.0.0",
    "probot-commands": "^1.0.1",
    "probot-metadata": "git+https://git@github.com/gautamarora/metadata.git",
    "request-promise-native": "^1.0.5",
    "sequelize": "^4.37.10",
    "sequelize-cli": "^4.0.0",
    "smee-client": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "dotenv": "^6.0.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "pryjs": "^1.0.3",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "notify": true,
    "globalSetup": "./tests/unit/global-setup.js"
  },
  "nodemonConfig": {
    "ignore": ["public/*"]
  }
}
